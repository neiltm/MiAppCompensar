<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".LoginAdminActivity">

    <TextView
        android:id="@+id/tvInicioSesionAdmin"
        android:layout_width="246dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="73dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="76dp"
        android:gravity="center"
        android:text="INICIAR SESIÓN\nAdministrador"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="212dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="127dp"
        android:src="@drawable/avatar" />

    <EditText
        android:id="@+id/etUsuarioAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarImageView"
        android:layout_marginTop="29dp"
        android:hint="UsuarioAdmin"
        android:inputType="text" />

    <EditText
        android:id="@+id/etContrasenaAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUsuarioAdmin"
        android:layout_marginTop="19dp"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnIniciarSesionAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etContrasenaAdmin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Iniciar Sesión"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/btnInicioSesionGoogleAdmin"
        android:layout_width="395dp"
        android:layout_height="114dp"
        android:layout_below="@id/btnIniciarSesionAdmin"
        android:layout_marginTop="75dp"
        android:clickable="true"
        android:onClick="iniciarSesionGoogleAdmin"
        android:src="@drawable/google" />

</RelativeLayout>
